<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false">

    <layer-list>
      <item>
        <shape>
          <corners android:radius="10dp"/>
          <solid android:color="#006666"/>
        </shape>
      </item>


      <item>
        <shape>
          <gradient android:angle="270" android:endColor="#006666" android:startColor="#006666"/>
           <stroke/> 
          <corners android:radius="10dp"/>
          <!--  <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/> -->
        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true">

    <layer-list>
      <item>
        <shape>
          <corners android:radius="10dp"/>
          <solid android:color="#006666"/>
        </shape>
      </item>


      <item>
        <shape>
          <gradient android:angle="270" android:endColor="#00b3b3" android:startColor="#006666"/>
          <stroke />
          <corners android:radius="10dp"/>
          <!--  <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>-->
        </shape>
      </item>
    </layer-list>
  </item>

</selector>
